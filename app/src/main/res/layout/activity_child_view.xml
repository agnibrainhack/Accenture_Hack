<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstractfront"
    tools:context="com.example.hp.wecarenewedition.ChildViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_margin="10dp"
            android:layout_height="300dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugar Report Last Time"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Fasting"
                    android:textSize="15dp"
                    android:textColor="#0f015e"/>
                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/sugar_fasting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.github.mikephil.charting.charts.HorizontalBarChart>

            </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Random"
                        android:textSize="15dp"
                        android:textColor="#0f015e"/>
                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/sugar_pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.github.mikephil.charting.charts.HorizontalBarChart>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Post Prandial"
                        android:textSize="15sp"
                        android:textColor="#0f015e"/>
                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/sugar_random"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.github.mikephil.charting.charts.HorizontalBarChart>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Predicted Random Value"
                        android:textSize="18dp"
                        android:textColor="#0f015e"/>
                   <TextView
                       android:layout_margin="5dp"
                       android:layout_weight="1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="   120"
                       android:layout_gravity="center"
                       android:textSize="30sp"
                       android:textColor="#fff"
                       android:background="@drawable/circ_button"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Systolic"
                        android:textSize="15dp"
                        android:textColor="#0f015e"/>
                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/pressure_systolic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.github.mikephil.charting.charts.HorizontalBarChart>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Diastolic"
                        android:textSize="15dp"
                        android:textColor="#0f015e"/>
                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/pressure_diastolic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.github.mikephil.charting.charts.HorizontalBarChart>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Remarks"
                        android:textColor="#0f015e"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/pressure_remarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="go to hell "/>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vitals"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="25sp"
                    />
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Height"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/vitals_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="175cm"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Weight"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/vitals_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75kg"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Change Of Health"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/vitals_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Change"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="BMI :"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/vitals_bmi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Remarks"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good"
                        android:id="@+id/vitals_remark"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Last Checkup"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Check up for"
                        />
                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/last_checkup"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02.082018"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Time till last Check up:"
                        />
                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/timetilllast_checkup"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02.082018"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Remarks"
                        />
                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/remarks_checkup"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Very very bad"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardMaxElevation="15dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Health Tips"
                    android:layout_gravity="center_horizontal"/>
                <Button
                    android:id="@+id/wecare_tips"
                    android:layout_margin="15dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We Care Health Tips"
                    android:textColor="#000"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/newhealth_tips"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="I Don't Know"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>