<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    tools:context="com.example.hp.wecarenewedition.ChildView">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="7dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/childViewImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/pressure1"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/serviceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_requested"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/last_check"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="@string/checkup_for"
                    />

                <TextView
                    android:id="@+id/lastCheckup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:text="02.08.2018"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/random_sugar"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="@string/checkup_for"
                        />

                    <TextView
                        android:id="@+id/random_sugarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:text="02.08.2018"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sinceLastCheckup"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:text="@string/time_till_last_checkup"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timetilllast_checkup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:text="02"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:text="@string/remarks"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/remarks_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:text="@string/remarks"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/predicted_randomSugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/predicted_random_value"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/predicted_randomSugarValue"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:background="@drawable/circ_button"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>